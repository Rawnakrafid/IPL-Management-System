<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="469.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javanetworking.connectedcontroller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome, Client!">
      <font>
         <Font name="Al Tarikh Regular" size="29.0" />
      </font>
   </Text>
    <TextField fx:id="clientText" onAction="#getTextAction" promptText="Send a message to the server" />
    <AnchorPane prefHeight="0.0" prefWidth="0.0" />
   <TextField fx:id="serverText" promptText="Server's Message" />
</VBox>
